let media = (10 + 5) / 2

if(media >= 7) {
    console.log("Parabéns, sua média é " + media + "\nEstá aprovado!");
} else {
    console.log("Reprovado.\nSua média é " + media);
}

// exercício 4
console.log("\n");

let precoGasolina = 5.67;
let precoAlcool = 4.80;

let alcoolDivididoGasolina = precoAlcool / precoGasolina;

if(alcoolDivididoGasolina < 0.7) {
    console.log("O resultado é: " + alcoolDivididoGasolina.toFixed(2) + "\nUtilize álcool!");
} else {
    console.log("O resultado é: " + alcoolDivididoGasolina.toFixed(2) + "\nUtilize gasolina!");
}